@model JNCC.Microsite.SAC.Models.Data.SiteFeature
@using JNCC.Microsite.SAC.Helpers.Website

<li>
    <div class="little-header">
        <b>@(InterestFeatureHelpers.GetPlainIntegerCode(Model.Code))</b> <a href=@(InterestFeatureHelpers.GetFeatureUrl(Model.Code))>@(Model.Name)</a>@(Html.Raw(SiteHelpers.IsPriorityFeature(Model.Priority)))
    </div>
    @if (Model.IsPrimary) {    
        if (!String.IsNullOrWhiteSpace(Model.PrimaryText)) {
            @Html.Raw(String.Format("<p>{0}</p>", Model.PrimaryText));
        } else {
            @Html.Raw("<p>Species occurrence description not yet available.</p>");
        }
    }
</li>
