@model JNCC.Microsite.SAC.Models.Data.InterestFeatureOccurrence
@using JNCC.Microsite.SAC.Helpers.Website

<li>
    <b>
        <a href=@(SiteHelpers.GetSiteURLFromCode(Model.SiteCode)) class="space-right">@(Model.SiteName)</a>
        @(Model.LocalAuthority)
    </b>
    <div>
        @if(String.IsNullOrWhiteSpace(Model.PrimaryText)) {
            if (Model.IsHabitat) {
                @Html.Raw("Habitat occurrence description not yet available.");
            } else if (Model.IsSpecies) {
                @Html.Raw("Species occurrence description not yet available.");
            }        
        } else {
            @Html.Raw(Model.PrimaryText);
        }
    </div>
</li>