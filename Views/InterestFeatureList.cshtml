@model JNCC.Microsite.SAC.Models.Website.InterestFeatureListPage
@using JNCC.Microsite.SAC.Website.Helpers
@{
    Layout = "Shared/_Layout.cshtml";
}

<h1>@(Model.Type)</h1>


@foreach (var section in Model.InterestFeatureSections)
{
    @(Html.Raw(String.Format("<table><tr><th class=\"cell small-9\">{0}</th><th class=\"cell small-3\">No. of SAC's</p></th></tr>", section.SectionTitle)));
    foreach (var feature in section.InterestFeatures) {
        @(Html.Raw(String.Format("<tr><td><a href=\"{0}\">{1}</a> {2}</td><td class=\"flex-container align-center\">{3}</td></tr>", InterestFeatureHelpers.GetFeatureUrl(feature.Code), InterestFeatureHelpers.GetPlainIntegerCode(feature.Code), feature.Name, feature.Occurrences.Count)));
    }
    @(Html.Raw("</table>"));
}