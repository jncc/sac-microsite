@model List<(string, string, bool)>
<div class="row">
    <nav aria-label="breadcrumbs">
        <ul class="breadcrumbs">
            @foreach ((string href, string text, bool display) in Model)
            {
                <li><a class="@(display ? "" : "show-for-sr")" href="@(href)">@Html.Raw(text)</a></li>
            }
        </ul>
    </nav>
</div>