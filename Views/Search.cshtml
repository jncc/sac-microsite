@model JNCC.Microsite.SAC.Models.Website.Search
@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="two-columns">
    <div id="content">
        <h1>Under Development - For the current official guidelines go <a href="http://jncc.defra.gov.uk/protectedsites/SACselection/">here</a></h1>
        <div class="row callout secondary">
            <p><b>List all SACs:</b> <a href="/site/england">England</a> | <a href="/site/northern-ireland">Northern Ireland</a> | <a href="/site/scotland">Scotland</a> | <a href="/site/wales">Wales</a> | <a href="/site/offshore">Offshore</a> | <a href="/site/">Full UK List</a></p>
        </div>
        <div class="callout secondary">
            <p>List all <a href="/habitat/">Habitat</a> or  <a href="/species/">Species</a> interest features</p>
        </div>
        <script type="text/javascript">
            function goToSite(selected) {
                if (selected.value !== "") {
                    window.location.assign("/site/" + selected.value);
                }
            }
        </script>
        <div class="callout secondary">
            <p><b>Select a specific SAC by name</b></p>
            <div class="row">
                <form name="sites">
                    <select name="EUCode" class="column small-12 large-8">
                        <option selected="" value="">Choose an SAC from the drop down list</option>
                        @foreach ((string EUCode, string Name) in Model.Sites)
                        {               
                            <option value=@(EUCode)>@(Name)</option>
                        }
                    </select>
                    <a href="#" class="button primary column small-12 large-4 end" onclick="goToSite(document.sites.EUCode)">View Site</a>
                </form>
            </div>
        </div>
    </div>
</div>
