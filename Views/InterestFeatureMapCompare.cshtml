@model JNCC.Microsite.SAC.Models.Website.InterestFeaturePage
@using JNCC.Microsite.SAC.Helpers.Website;
@{
    Layout = "Shared/_Layout.cshtml";
}

<h1>Comparison of UK resource and SAC distribution of @(InterestFeatureHelpers.GetAnnexString(Model.InterestFeature.Code)) @(InterestFeatureHelpers.GetPlainIntegerCode(Model.InterestFeature.Code)) @(Html.Raw(Model.InterestFeature.LayTitle)) @(Html.Raw(Model.InterestFeature.Name))</h1>

<div class="grid-container">
    <div class="grid-x grid-padding-x grid-padding-y">
        <div class="cell small-12 medium-6 large-6">
            <figure>
                <a href="@(InterestFeatureHelpers.GetDistributionURL(Model.InterestFeature.Code))"><img src="/images/maps/features/uk/uk_@(Model.InterestFeature.Code).gif" alt="@(InterestFeatureHelpers.GetUKDistributionAltImageText(Model.InterestFeature.Code, Model.InterestFeature.LayTitle, Model.InterestFeature.Name))" class="small-12 center"/></a>
                <figcaption class="text-center">View <a href="@(InterestFeatureHelpers.GetDistributionURL(Model.InterestFeature.Code))">UK Distribution</a> for this @(InterestFeatureHelpers.IsHabitatCode(Model.InterestFeature.Code) ? "habitat" : "species")</figcaption>
            </figure>
        </div>
        <div class="cell small-12 medium-6 large-6">
            <figure>
                <a href="@(InterestFeatureHelpers.GetFeatureUrl(Model.InterestFeature.Code))"><img src="/images/maps/features/@(Model.InterestFeature.Code).gif" alt="@(InterestFeatureHelpers.GetUKDistributionAltImageText(Model.InterestFeature.Code, Model.InterestFeature.LayTitle, Model.InterestFeature.Name))" class="small-12 center"/></a>
                <figcaption class="text-center">View <a href="@(InterestFeatureHelpers.GetFeatureUrl(Model.InterestFeature.Code))">SAC selection</a> for this @(InterestFeatureHelpers.IsHabitatCode(Model.InterestFeature.Code) ? "habitat" : "species")</figcaption>
            </figure>
        </div>
    </div>    
</div>
